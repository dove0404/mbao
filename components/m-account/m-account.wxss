.account-box{
  width: 100%;
  height: 120rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 34rpx;
}
.account-box::after{
  /* 通过放大再缩小的方式实现1px边框线,伪类+transform,元素本身要position:relative*/
  position: absolute;
  content: '';
  border-top:1px solid #e3e5e9;
  width: 200%;
  top: 0;
  left: 0;
  transform: scale(0.5);
  transform-origin: 0 0;
}
.account-tips{
  font-size: 24rpx;
  color: #666666;
}
.price-box{
  display: flex;
  line-height: 80rpx;
  font-weight: bold;
}
.price{
  padding-right: 24rpx;
  font-size: 28rpx;
}
.price-text{
  color: #FA230A;
}
.account-btn{
  height: 80rpx;
  width: 230rpx;
  background: linear-gradient(180deg, #FF8023, #FF4D0F);
  border-radius: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: white;
}