<view class="recom-box">
  <view class="tittle">猜你喜欢</view>
  <view class="recomGoods-box">
    <block wx:for="{{recomGoods}}" wx:key="index">
      <view class="recomItem-box">
        <view class="recomImg-box">
          <image src="{{item.imgurl}}" class="recom-img" mode="widthFix"/>
        </view>
        <view class="recom-tittle">{{item.tittle}}</view>
        <text class="recom-price">￥{{item.price}}</text>
      </view>
    </block>
  </view>
</view>
