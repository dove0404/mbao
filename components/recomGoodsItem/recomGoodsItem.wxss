.recom-box{
  background: white;
  border-radius: 20rpx;
  padding: 34rpx;
}
.tittle{
  font-size: 30rpx;
}
.recomGoods-box{
  display: flex;
  flex-wrap: wrap;
}
.recomItem-box{
  width: 33.3%;
  padding-bottom: 20rpx;
}
.recomImg-box{
  width: 220rpx;
  height: 220rpx;
  border-radius: 14rpx;
  overflow: hidden;
}
.recom-img{
  width: 100%;
}
.recom-tittle{
  margin: 10rpx 0;
  font-size: 26rpx;
  color: #333333;
  line-height: 30rpx;
}
.recom-price{
  font-size: 26rpx;
  font-weight: bold;
  color: #FA230A;
  line-height: 50rpx;
}