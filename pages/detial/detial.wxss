.mainImg-box{
  background-color: yellowgreen;
  height: 750rpx;
  overflow: hidden;
}
.main-img{
  width: 100%;
}
.info-box{
  padding: 0 36rpx;
  border-radius: 0 0 24rpx 24rpx;
  background-color: white;
  margin-bottom: 26rpx;
}
.price{
  font-size: 40rpx;
  color: #FA230A;
  line-height: 100rpx;
  font-weight: bold;
}
.old-price{
  color: #999999;
  text-decoration: line-through;
  font-size: 24rpx;
  margin-left: 10rpx;
}
.tittle{
  color: #333333;
  line-height: 54rpx;
  font-size: 34rpx;
  font-weight: bold;
}
.attribute{
  background: white;
  border-radius: 24rpx;
  padding: 44rpx 36rpx 0 36rpx;
  margin: 40rpx 0;
}
.attribute-box{
  /* padding-top: 44rpx; */
  /* background-color: violet; */
  height: 100rpx;
  display: flex;
  font-size: 26rpx;
}
.ensure-box{
  background: #FCFCFC;
  font-size: 24rpx;
  color: #8C8C8C;
  display: flex;
}
.sub-ensure{
  padding-right: 30rpx;
  line-height: 80rpx;
}
.text-key{
  flex: 2;
  /* background-color: yellow; */
} 
.att-value{
  flex: 11;
  /* background-color: teal; */
}
.text-icon{
  flex: 2;
  text-align: right;
}