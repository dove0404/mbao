.order-topImage{
  height: 230rpx;
  background: linear-gradient(180deg, #FFC300, #F18D00);
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}
.order-topImage-content{
  width: 400rpx;
  padding-bottom: 30rpx;
}
.order-topImage-tittle{
  display: block;
  font-size: 34rpx;
  line-height: 60rpx;
  font-weight: bold;
}
.order-topImage-info{
  display: block;
  font-size: 24rpx;
}
.order-topImage .icon-car-12{
  font-size: 100rpx;
}
.address-box{
  position: relative;
  left: 0;
  top: -24rpx;
  border: none !important;
  border-radius: 24rpx 24rpx 0 0 !important;
  background: white !important;
}
.goods-box{
  border-radius: 0 !important;
  margin-top: 0 !important;
}
.order-info{
  margin-bottom: 150rpx;
  background-color: white;
  padding: 0 28rpx;
}
.order-infoTittle{
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}
.item-info{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  line-height: 110rpx;
}
.order-operate{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: white;
  padding: 0 34rpx;
}
.order-operate::after{
  /* 通过放大再缩小的方式实现1px边框线,伪类+transform,元素本身要position:relative*/
  position: absolute;
  content: '';
  border-top:1px solid #e3e5e9;
  width: 200%;
  top: 0;
  left: 0;
  transform: scale(0.5);
  transform-origin: 0 0;
}
.order-operateItem{
  position: relative;
  font-size: 24rpx;
  color: #16161a;
  height: 58rpx;
  margin-left: 22rpx;
  padding: 0 25rpx;
  line-height: 58rpx;
}
.order-operateItem::after{
  /* 通过放大再缩小的方式实现1px边框线,伪类+transform,元素本身要position:relative*/
  position: absolute;
  content: '';
  border:1px solid #b5b5b5;
  border-radius: 60rpx;
  width: 200%;
  height: 200%;
  top: 0;
  left: 0;
  transform: scale(0.5);
  transform-origin: 0 0;
}